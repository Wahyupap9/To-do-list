<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>To Do List</h1>
    <input type="text" placeholder="Write new task" />
    <button>Submit</button>

    <div class="container">
      <table>
        <tr>
          <th>No</th>
          <th>Status</th>
          <th>Task</th>
          <th>Action</th>
        </tr>
        <%let no = 1; if (lists.length > 0) { lists.forEach(list => { %>
        <tr>
          <td><%- no %></td>
          <td>
            <input type="checkbox" <% if (list.status) {%>checked <%;}%>>
          </td>
          <td><%- list.task %></td>
          <td>
            <button>Delete</button>
            <button>Change</button>
          </td>
        </tr>
        <% })} %>
      </table>
    </div>
  </body>
</html>
