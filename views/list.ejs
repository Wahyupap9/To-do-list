<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link rel="stylesheet" href="css/list.css">
  </head>
  <body>
    <h1>To Do List</h1>
    <div class="container">
        <input type="text" placeholder="Write new task" />
        <button class="submit">Submit</button>

        <div class="container-list">
        <table border="1" cellspacing="0">
            <tr>
            <th class="no">No</th>
            <th class="status">Status</th>
            <th class="task">Task</th>
            <th class="action">Action</th>
            </tr>

            <%let no = 1; if (lists.length > 0) { lists.forEach(list => { %>
            <tr>
            <td><%- no %></td>
            <td>
                <input type="checkbox" <% if (list.status) {%> checked <%;}%>>
            </td>
            <td><%- list.task %></td>
            <td>
                <a href="/delete/<%-list.id%>"><button class="delete">Delete</button></a>
                <a href="/change/<%-list.id%>"><button class="change">Change</button></a>
            </td>
            </tr>
            <% no++ })} %>
        </table>
        </div>
    </div>
  </body>
</html>
